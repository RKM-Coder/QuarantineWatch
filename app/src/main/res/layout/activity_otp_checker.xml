<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".ui.OtpCheckerActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/bg"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_alignParentTop="true"

            app:cardBackgroundColor="@color/cardcolor"
            app:cardCornerRadius="15dp"
            android:layout_marginTop="20dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"

                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Quarantine Watch "
                    android:gravity="center"
                    android:textSize="25sp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold"
                    android:layout_gravity="center"/>
                <TextView
                    android:id="@+id/txt_info_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name_login_info"
                    android:gravity="center"
                    android:textSize="17sp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="normal"
                    android:layout_gravity="left"/>

                <com.chaos.view.PinView
                    android:id="@+id/pin_view"
                    style="@style/PinWidget.PinView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:cursorVisible="true"
                    android:hint=""
                    android:layout_marginTop="@dimen/activity_horizontal_margin"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:paddingBottom="3dp"
                    android:paddingTop="3dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="18sp"
                    app:cursorColor="@color/colorPrimaryDark"
                    app:cursorWidth="2dp"
                    app:hideLineWhenFilled="false"
                    app:itemCount="4"
                    app:itemHeight="50dp"
                    app:itemRadius="4dp"
                    app:itemSpacing="10dp"
                    app:itemWidth="50dp"
                    app:lineColor="#102d67"
                    app:lineWidth="1dp"
                    app:viewType="rectangle" />

                <TextView
                    android:id="@+id/tv_resendOTPtimer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/pin_view"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginTop="10dp"
                    android:text="2"
                    android:visibility="visible"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="normal"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif"/>
                <TextView
                    android:id="@+id/tv_resendOTP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/pin_view"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginTop="10dp"
                    android:text="Resend OTP"
                    android:visibility="gone"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="normal"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif"/>


                <Button
                    android:id="@+id/btn_login"
                    android:layout_width="140dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="@dimen/activity_horizontal_margin"
                    android:background="@drawable/submit_drawable"
                    android:text="Login"
                    android:textSize="20sp"
                    android:textColor="#FFFFFF"
                    android:textAllCaps="false"
                    android:padding="5dp"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">
            <include layout="@layout/include_help_layout"/>
        </LinearLayout>



    </RelativeLayout>

</LinearLayout>